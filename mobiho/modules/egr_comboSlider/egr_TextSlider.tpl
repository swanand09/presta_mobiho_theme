/* slider controls */
.splash-controls{ display:block; height:5em; width:100%; margin:0 auto; margin-top:-5em; position:relative; }
.splash-controls a{ display:block; width:25%; float:left; height:5em; color:[[SLIDE12-FONT]]; background-color:[[SLIDE12-BACKGROUND]];
 		 text-align:center; line-height:5em; float:left; text-decoration:none; font-weight:bold; -moz-opacity:.50; filter:alpha(opacity=50); opacity:.50;}
.splash-controls a.selected { color:[[SLIDE12-FONT-HOVER]]; background:[[SLIDE12-BACKGROUND-HOVER]]; font-weight:bold; -moz-opacity:1; filter:alpha(opacity=100); opacity:1;}
.splash-controls a:hover { color:[[SLIDE12-FONT-HOVER]]; background:[[SLIDE12-BACKGROUND-HOVER]]; font-weight:bold; -moz-opacity:1; filter:alpha(opacity=100); opacity:1;}

.splash-content {   height:340px;   }
