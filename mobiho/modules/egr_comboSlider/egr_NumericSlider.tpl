/* slider controls */
.splash-controls						{ display:block; height:2em; margin:0 auto; margin-top:1em; margin-bottom:1em; float:[[SLIDE11-NAVIGATION-POSITION]];}
.splash-controls a						{ display:block; width:2em; height:2em; color:#333; background-color:[[SLIDE11-THUMB-BACKGROUND]];
 										  text-align:center; line-height:2em; float:left; margin-right:0.5em; text-decoration:none; 
										  border-radius:1em; -moz-border-radius:1em; -webkit-border-radius: 1em;
										}
.splash-controls a.selected				{ color:[[SLIDE11-THUMB-INNER-FONT]]; background:[[SLIDE11-THUMB-INNER-HOVER]]; }
.splash-content {   height:340px;   }
