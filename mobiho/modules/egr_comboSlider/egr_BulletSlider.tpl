/* slider controls */
.splash-controls    {   display:block; height:1em; margin:-2.5em 25px; position:relative; float:[[SLIDE13-NAVIGATION-POSITION]];}
.splash-controls a  {   display:block; width:1em; height:1em; color:green; background-color:[[SLIDE13-THUMB-COLOR]];
                        text-align:center; line-height:2em; float:left; margin-right:0.5em; text-decoration:none; 
                        border-radius:1em; -moz-border-radius:1em; -webkit-border-radius: 1em;
                    }
.splash-controls a.selected, .splash-controls a:hover{ background:[[SLIDE13-THUMB-COLOR-HOVER]]; }
